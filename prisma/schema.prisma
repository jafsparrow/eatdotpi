model Order {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime      @default(now())
  customer     Customer
  cartItems    CartItem[]
  amount       Int
  status       Status
  orgId        String        @db.ObjectId
  Organisation Organisation? @relation(fields: [orgId], references: [id])
}

type CartItem {
  name      String
  amount    Int
  count     Int
  modifiers String[]
}

type ModifierGroup {
  description      String
  shouldBeSelected Boolean
  items            Modifier[]
}

type Modifier {
  title     String
  price     Float
  isDefault Boolean
}

type Customer {
  name  String
  phone String
}

enum Status {
  NEW
  DONE
}
