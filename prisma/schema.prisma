model Organisation {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  currencyCode String
  Product      Product[]
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  phone    String
  username String
  password String
}

